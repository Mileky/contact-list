<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>

        <service id="DD\ContactList\Infrastructure\ViewTemplate\ViewTemplateInterface"
                 alias="DD\ContactList\Infrastructure\ViewTemplate\TwigTemplate"/>

        <service id="DD\ContactList\Infrastructure\ViewTemplate\TwigTemplate">
            <argument key="$pathToTemplates">%kernel.project_dir%/templates/</argument>
        </service>

    </services>

</container>